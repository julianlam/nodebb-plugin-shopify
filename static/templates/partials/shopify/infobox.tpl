<div class="shopify-infobox">
	<div class="media">
		<div class="media-left">
			<a href="https://campusprotein.com/products/{handle}">
				<img class="media-object not-responsive" src="{image.src}" alt="{title}">
			</a>
		</div>
		<div class="media-body">
			<h4 class="media-heading"><a href="https://campusprotein.com/products/{handle}">{title}</a></h4>
			<span class="text-muted">by <a href="https://www.campusprotein.com/collections/vendors?q={vendor}">{vendor}</a></span>
			<p>
				See other <a href="https://www.campusprotein.com/collections/types?q={product_type}">{product_type}</a>
			</p>
		</div>
	</div>
</div>
